%header
  %nav.navbar.navbar-default
    .container
      .navbar-header
        %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{:href => root_path}
          = image_tag "logo.png"
      #navbar
        %ul.nav.navbar-nav.navbar-right
          - if current_user && current_user.admin?
            %li= link_to 'Panel', panel_path, class: "#{'nav-active' if params[:action] == 'panel'}"
          - if user_signed_in?
            %li= link_to 'Lessons', lessons_path, class: "#{'nav-active' if params[:controller] == 'lessons'}"
            %li= link_to 'Billing', billing_path, class: "#{'nav-active' if params[:controller] == 'billing'}"
            %li= link_to 'Settings', edit_user_registration_path, class: "#{'nav-active' if params[:controller] == 'users/registrations'}"
            %li= button_to 'Sign out', destroy_user_session_path, method: :delete
          - else
            %li= link_to "Home", root_path, class: "#{'nav-active' if params[:action] == 'landing'}"
            %li= link_to "Choose Us", choose_us_path, class: "#{'nav-active' if params[:action] == 'choose_us'}"
            %li= link_to "Our Program", our_program_path, class: "#{'nav-active' if params[:action] == 'our_program'}"
            %li= link_to "Get Started", get_started_path, class: "#{'nav-active' if params[:action] == 'get_started'}"
            %li= link_to "Contact Us", contact_us_path, class: "#{'nav-active' if params[:action] == 'contact_us'}"
            %li= link_to "Sign in", new_user_session_path, class: "#{'nav-active' if params[:action] == 'new' && params[:controller] == 'users/sessions'}"
            %li= link_to "Sign up", new_user_registration_path, class: "#{'nav-active' if params[:action] == 'new' && params[:controller] == 'devise/registrations'}"
