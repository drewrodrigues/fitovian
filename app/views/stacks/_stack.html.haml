.card
  .card-body
    = link_to stack do
      = image_tag stack.icon.url, class: 'img-fluid stack-image'
    %p.stack-category{style: "color: #{stack.category_color}"}
      %i.icon.ion-edit
      = stack.category_title
    %h4.stack-title= stack.title
    %p.stack-summary= truncate(stack.summary, length: 240)
    .text-center
      = link_to 'LEARN MORE', stack, class: 'stack-button', style: "background-color: #{stack.category_color}"
    - if current_user.selected?(stack)
      = link_to 'Remove', selections_path(stack), method: :delete, class: 'btn btn-sm btn-link'
    - else
      = link_to 'Add', selections_path(stack), method: :post, class: 'btn btn-sm btn-link'
