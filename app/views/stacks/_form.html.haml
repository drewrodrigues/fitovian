= form_for @stack do |f|
  = image_tag @stack.icon.url
  - if @stack.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stack.errors.count, "error")} prohibited this stack from being saved:"
      %ul
        - @stack.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    = f.text_field :title, class: 'form-control'
  .field
    = f.label :category_id
    = f.collection_select(:category_id, Category.all, :id, :title)
  .field
  .field
    = f.label :summary
    = f.text_area :summary, class: 'form-control'
  .field
    = f.file_field :icon
  .actions
    = f.submit 'Save'
