.col-md-4.col-md-offset-4.login-and-register
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-group
      - if session[:registerable_email]
        .field
          = f.label :email
          = f.email_field :email, class: 'form-control', value: session[:registerable_email]
        .field
          = f.label :password
          = f.password_field :password, autocomplete: "off", class: 'form-control', autofocus: true
      - else
        .field
          = f.label :email
          = f.email_field :email, class: 'form-control', autofocus: true
        .field
          = f.label :password
          = f.password_field :password, autocomplete: "off", class: 'form-control'
    .actions
      = f.submit "Sign up", class: 'btn btn-success'
      = link_to "Login", new_user_session_path, class: 'btn btn-sm'
